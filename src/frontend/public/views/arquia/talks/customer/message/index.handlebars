<div class="ui-arquia-talks-message-container ui-helper-hidden">
    <h3>{{{__ "Arquia.Talks.Message.Title"}}}</h3>
    <p>
        <i class="ui-arquia-talks-message-userIcon fa fa-file-text-o ui-state-default"></i>
        {{{__ "Arquia.Talks.Message.Description"}}}
    </p>
    <div class="ui-helper-clearfix"></div>
    <div class="ui-arquia-talks-boxError ui-state-error ui-helper-hidden"></div>
