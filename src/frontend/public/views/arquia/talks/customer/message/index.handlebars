                        <div dir="auto" contenteditable="true" class="input" placeholder="Escribe un mensaje"></div>
                    </div>
                </div>
                <div class="ptt-container">
                    <span>
                        <button class="ui-button-micro ui-state-default"><i class="fa fa-microphone"></i></button>
                        <button class="ui-button-send ui-helper-hidden ui-state-default"><i class="fa fa-sign-in"></i></button>
                    </span>
                </div>
            </div>
        </div>
    </div>

